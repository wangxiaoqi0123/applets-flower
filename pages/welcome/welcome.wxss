/* pages/welcome/welcome.wxss */
.container {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
page {
  background-color: #b3d4db;
}
.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 160rpx;
}

.motto {
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.journey {
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 5px;
  text-align: center;
  margin-top: 200rpx;
}

.journey>text {
  font-size: 22rpx;
  color: #405f80;
}