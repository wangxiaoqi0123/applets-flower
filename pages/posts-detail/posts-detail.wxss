.container {
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 102rpx;
  height: 106rpx;
  position: absolute;
  left: 50%;
  top: 230rpx;
  transform: translate(-50%, -50%);
  opacity: 0.6;
}

.author-date {
  display: flex;
  margin: 20rpx 30rpx 0;
  align-items: center;
}

.author-date>.avatar {
  height: 64rpx;
  width: 64rpx;
}

.author-date>.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
}

.author-date>.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.author-date>.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  color: #4b446c;
  letter-spacing: 2rpx;
}

.tool {
  position: relative;
  margin: 30rpx 30rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-end;
}

.tool>.circle-img {
  width: 90rpx;
  height: 90rpx;
  margin-left: 30rpx;
}

.tool::after {
  content: '';
  display: block;
  height: 1px;
  width: 100%;
  background-color: #e5e5e5;
  position: absolute;
  top: 50%;
  z-index: -1;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 28rpx;
}