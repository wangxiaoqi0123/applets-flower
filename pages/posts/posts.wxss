/* pages/posts/posts.wxss */
.swiper-container>swiper,
.swiper-image {
  width: 100%;
  height: 460rpx;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.post-author-date {
  display: flex;
  align-items: center;
  margin: 10rpx 0 20rpx 10rpx;
}



.post-author-date>image {
  width: 60rpx;
  height: 60rpx;
}

.post-author-date>text {
  margin-left: 20rpx;
  font-size: 26rpx;
}

.post-title {
  margin: 0 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #333;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin: 0 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  margin-bottom: 20rpx;
}

.post-like {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
  margin-bottom: 10rpx;
}

.post-like>image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.post-like>text {
  margin-right: 40rpx;
  color: #666;
  font-size: 24rpx;
}